	<authorUrl>https://aman-codes.github.io/</authorUrl>
	<version>1.0</version>
	<description>PLG_CONTENT_AWESOME_XML_DESCRIPTION</description>
	<files>
		<filename plugin="awesome">awesome.php</filename>
    <filename plugin="awesome">en-GB.plg_content_awesome.ini</filename>
    <filename plugin="awesome">en-GB.plg_content_awesome.sys.ini</filename>
	</files>
	<languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.plg_content_awesome.ini</language>
		<language tag="en-GB">en-GB.plg_content_awesome.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="custom_heading"
					type="text"
					label="PLG_CONTENT_AWESOME_PARAM_TEXT_LABEL"
					description="PLG_CONTENT_AWESOME_PARAM_TEXT_DESCRIPTION"
					hint="Your Custom Heading"
				/>
			</fieldset>
		</fields>
	</config>
